<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_control_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="false"
    android:paddingTop="@dimen/control_bar_fit_sys">

    <LinearLayout
        android:id="@+id/cb_left_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/control_bar_size"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/cb_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_bar_size"
        android:paddingLeft="@dimen/control_bar_text_padding"
        android:paddingRight="@dimen/control_bar_text_padding"
        android:gravity="center"
        android:text="@string/app_name"
        android:singleLine="true"
        android:textColor="@color/control_bar_title_color"
        android:textSize="@dimen/control_bar_title_text_size" />

    <LinearLayout
        android:id="@+id/cb_right_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/control_bar_size"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>
