<resources>
    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="fmwk_style_fullscreen">false</item>
        <item name="fmwk_control_bar_mark_size">@dimen/control_bar_mark_size</item>
        <item name="fmwk_control_bar_title_text_size">@dimen/control_bar_title_text_size</item>
        <item name="fmwk_control_bar_item_text_size">@dimen/control_bar_item_text_size</item>
        <item name="fmwk_control_bar_item_text_color">@color/control_bar_item_text_color</item>
        <item name="fmwk_control_bar_background_color">@color/control_bar_background_color</item>
        <item name="fmwk_control_bar_item_selector">@drawable/base_ctrl_bar_item_selector</item>
    </style>

    <style name="BaseLightTheme.Fullscreen" parent="BaseLightTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="fmwk_style_fullscreen">true</item>
    </style>

    <style name="AppTheme" parent="BaseLightTheme">
    </style>
</resources>
